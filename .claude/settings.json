{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "*"
    ],
    "ask": [],
    "deny": [
      "Bash(*--force*)",
      "Bash(*--hard*)",
      "Bash(rm -rf:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/bmad_stop_gate.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session_start.sh"
          }
        ]
      }
    ]
  }
}
